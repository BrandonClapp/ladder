.panel.panel-default
  .panel-heading
    %h3.panel-title
      League
  .panel-body
    = form_for :league, :url => { :action => "create" } do |f|
      %p.form-group
        = f.label :name
        = f.text_field :name, class: "form-control"

      %p.form-group
        = f.submit class: "btn btn-default"