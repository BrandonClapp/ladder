.main-banner
  .main-banner-film

.container
  .content
    %h3 Teams
    = link_to "New Team", new_team_path

    .dark
      %table.table.table-bordered.table-hover.table-striped.table-condensed
        %tr
          %th Team Name
          %th Members
          %th Leagues
        - @teams.each do |team|
          %tr
            %td= link_to team.name, team_path(team)
            %td= team.users.count
            %td Leagues where this team is a member of a ladder/tournament/season.
      = pluralize(@teams.count, "team")

  