.main-banner
  .main-banner-film

.container
  .content
    .dark
      %a= link_to "All Teams", teams_path

    %h1= @team.name

    %h2 Members

    - if @team.users.empty?
      No members
    - else
      %table
        %tr
          %th Name
          %th Email
        - @team.users.each do |member|
          %tr
            %td
              = @team.tag
              = link_to member.name, user_path(member)
            %td
              = member.email

    %h2 Tournaments
    - if @team.tournaments.empty?
      No tournaments
    - else
      %table
        %tr
          %th Tournament
          %th League
        - @team.tournaments.each do |tournament|
          %tr
            %td
              = tournament.name
            %td
              = tournament.league.name
